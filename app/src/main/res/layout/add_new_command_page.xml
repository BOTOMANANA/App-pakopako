<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".controllers.AddNewCommandPage">

    <include
        android:layout_width="match_parent"
        android:layout_height="130dp"
        layout="@layout/header_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/editPakopko"
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableStart="@drawable/custom_icon_pakopako"
                    android:hint="  Simple"
                    android:inputType="number|numberSigned"
                    android:maxLength="3"
                    android:paddingStart="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintEditText"
                    tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

                <EditText
                    android:id="@+id/editPakopkoSauce"
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableStart="@drawable/custom_icon_pakopako"
                    android:hint="  Sauce"
                    android:inputType="number|numberSigned"
                    android:maxLength="3"
                    android:paddingStart="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintEditText"
                    tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            </LinearLayout>

            <EditText
                android:id="@+id/editSkewer"
                android:layout_width="310dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/custom_icon_skewer"
                android:hint="  Brochettes"
                android:inputType="number|numberSigned"
                android:maxLength="3"
                android:paddingStart="12sp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintEditText"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/editChicken"
                android:layout_width="310dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/custom_icon_chicken"
                android:hint="  Poulets"
                android:inputType="number|numberSigned"
                android:maxLength="3"
                android:paddingStart="12sp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintEditText"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/editJuice"
                android:layout_width="310dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/custom_icon_juice"
                android:hint=" Jus"
                android:inputType="number|numberSigned"
                android:maxLength="3"
                android:paddingStart="12sp"
                android:paddingEnd="15sp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintEditText"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/editFrenchFries"
                android:layout_width="310dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/french_fries"
                android:hint="  Pomme frite"
                android:inputType="number|numberSigned"
                android:maxLength="2"
                android:paddingStart="12sp"
                android:paddingEnd="15sp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintEditText"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/editMoney"
                android:layout_width="310dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/custom_icon_money"
                android:hint="  Montant client"
                android:inputType="number|numberSigned"
                android:maxLength="10"
                android:paddingStart="12sp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintEditText"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

        </LinearLayout>

    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        layout="@layout/footer_widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>