<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:radius="20dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="Quantite des produits"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edit_product_simba"
            android:hint="Quantite"
            android:inputType="number"
            android:maxLength="7"
            android:importantForAutofill="no"
            android:paddingStart="10sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextContrastCheck" />

        <Button
            android:id="@+id/btn_quantity"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorSecondary"
            android:text="Verifier"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
